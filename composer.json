{
  "require": {
    "phpmailer/phpmailer": "^6.9",
    "tecnickcom/tcpdf": "^6.10",
    "setasign/fpdi": "^2.6",
    "smalot/pdfparser": "^2.12",
    "dompdf/dompdf": "^3.1",
    "phpoffice/phpword": "^1.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "test:unit": "phpunit --configuration phpunit.xml --testsuite Unit",
    "test:auth": "phpunit --configuration phpunit.xml --testsuite Authentication",
    "test:features": "phpunit --configuration phpunit.xml --testsuite Features",
    "test:coverage": "phpunit --configuration phpunit.xml --coverage-html coverage/"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
